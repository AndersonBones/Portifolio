    <body class="position-relative">
        
        <%- include("./partials/header.ejs") %> <!-- Header -->
         

        <section id="resume" class="pb-5 resume container text-Primary d-flex flex-column gap-5">

            <article class="hi">
                <h1 class="pt-4">Olá</h1>
                <p><%= PersonalData[0].resume %></p>
                <a class="d-flex download-dv justify-content-center align-items-center btn btn-warning text-white" target="_blank" href="<%=PersonalData[0].cvUrl%>"><i class="bi bi-download "></i> <span>DOWNLOAD CV</span></a>
            </article>
          
            

            <div class="education ">
                <h5 class="formatElement d-inline-block">FORMAÇÃO ACADÊMICA</h5>
                

                <div class="education-list mt-3">
                    <div class="item start-circle end-circle">
                        <p class="mb-2"><%=PersonalData[0].university%></p>
                        <span >2022 - 2024</span>
                        <p class="mt-2"><%= PersonalData[0].education%></p>
                    </div>
                </div>
            </div>

                <!-- <div class="employment">
                    <h5>Experiências Profissionais</h5>
                    

                    <div class="employment-list " >
                        
                       EmploymentData.map(item =>{ %>
                            <div class="item ">
                                <p class="mb-2">item.company</p>
                                <span >item.period</span>
                                <p class="mt-2 mb-0">item.emp</p>
                            </div>
                        }) 
                
                
                    </div>
                </div> -->


                <div id="stack" class="stack  text-Primary ">
                    <h5 class="formatElement">STACK E QUALIFICAÇÕES</h5>

                    <div class="stack-list mt-3 ">

                        <div class="frontend-item item start-circle  ">
                            <p class="">Front end</p>
                            <div class="stacks-list">
                                <div class="stack-item  d-inline-flex flex-column justify-content-center  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/html-5--v1.png" />
                                    <p>HTML</p>
                                </div>
                                
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/css3.png"/>
                                    <p>CSS</p>
                                </div>
        
                                <div class=" stack-item d-inline-flex flex-column  align-items-center">
                                    <img src="https://raw.githubusercontent.com/devicons/devicon/master/icons/jquery/jquery-plain.svg" />
                                    <p >JQUERY</p>
                                </div>
        
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/bootstrap.png"/>
                                    <p>BOOTSTRAP</p>
                                </div>
    
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/fluency/144/null/javascript.png" />
                                    <p>JAVASCRIPT</p>
                                </div>
                            </div>
                            
                        </div>

                        <div class="backend-item item start-circle">
                            <p >Back end</p>
                            <div class="stacks-list">
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/fluency/144/null/node-js.png"/>
                                    <p>NODE.JS</p>
                                </div>
                                
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/fluency/144/null/typescript--v2.png"/>
                                    <p>TYPESCRIPT</p>
                                </div>
                            </div>
                            
                        </div>

                        <div class="database-item item start-circle end-circle">
                            <p >Banco de Dados</p>

                            <div class="stacks-list d-flex flex-wrap">
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/mongodb.png"/>
                                    <p>MongoDB</p>
                                </div>
        
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/firebase.png"/>
                                    <p>FIREBASE</p>
                                </div>
        
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/postgreesql.png"/>
                                    <p>POSTGRESQL</p>
                                </div>
        
                                <div class="stack-item  d-inline-flex flex-column  align-items-center">
                                    <img src="https://img.icons8.com/color/144/null/git.png"/>
                                    <p>GIT</p>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
            
        </section>
       
        <div class="line "></div>

        <section id="portfolio" class="projects w-100 container text-Primary m-auto ">
            <h1 class="mb-3" >Projetos Feitos</h1>

            <div class="projects-cards m-auto d-flex flex-column" >
        
                <% Projects.map(item=>{ %>
                    
                    <div class="project-card p-3  border  rounded d-flex flex-column flex-md-row align-items-center">
                        <div class="image-project  col-12 col-md-6 p-2">
                            <img src="<%=item.screen%>" alt="">
                        </div>
        
                        <div class="description-project pt-3 col-12 col-md-6 ms-2 d-flex gap-3 flex-column ">
                            <h2><%= item.name %></h2>
                            <p style="word-break: normal;"><%= item.description %></p>
        
                            <div class="used-stack ">
                                <p>STACK:</p>
                                
                                <% item.stack.map(stackItem=>{%>
                                    <img src="<%= stackItem %>" alt="">
                                <%}) %>
                                
                            </div>
                            <div class="livePreview d-flex  justify-content-end me-3">
                                <a class=" d-flex align-items-center  text-decoration-none gap-2" target="_blank" href="<%=item.link%>"><span>Preview</span> <i class="bi bi-box-arrow-up-right"></i></a>
                            </div>
                           
                        </div>
                    </div>
                <%}) %>
                
                
            </div>
        </section> 
        
        <footer id="contato" class="w-100">
            <div class="footer-background">
                
            </div>
            <div class="footer-container position-relative container pt-5 pb-5 col-12 ">
                <div class="contact-intro text-white text-center">
