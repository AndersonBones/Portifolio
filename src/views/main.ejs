                        <textarea required class="form-control" id="exampleFormControlTextarea1" name="message" placeholder="Mensagem" rows="10" cols="30"></textarea>
                        <button id="send-email" type="submit" class="btn btn-warning text-white mt-4 pt-2 pb-2">ENVIAR</button>
                    </fieldset>
                    
                  </form>

                  <div class="contact-info  m-auto  text-white mt-5 d-flex gap-5 gap-lg-2 flex-column flex-lg-row justify-content-around text-center">
